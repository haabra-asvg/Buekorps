<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>

<script defer>

  const getUsers = <%- JSON.stringify(users); %>;
  var options = [];

  getUsers.forEach(user => {
    options.push({ value: user.id, text: user.name });
  });
  console.log(options)

  function search() {
    var selectElement = document.querySelector('#test');
    var inputValue = document.getElementById("input").value.toLowerCase();
    var matches = options.filter(option => option.text.toLowerCase().includes(inputValue));

    if(matches.length > 0) {
      while (selectElement.firstChild) {
        selectElement.removeChild(selectElement.firstChild);
      }
      matches.forEach(option => {
        var newOption = document.createElement('option');
        newOption.value = option.value;
        newOption.text = option.text;
        selectElement.appendChild(newOption);
      });
    } else {
      alert("No matches found!");
    }
  }
</script>

<body>
  <select name="test" id="test" class="form-select w-25 mx-auto">
    <option value="velg" selected>Velg et barn...</option>
    <script>
      options.forEach(option => {
        document.write(`<option value="${option.value}">${option.text}</option>`);
      });
    </script>
  </select>
  <div class="field text-center">
    <label class="label">Name</label>
    <div class="control">
      <input class="input" type="text" placeholder="Text input" id="input">
      <button class="btn btn-primary" id="search" onclick="search()">Search</button>
    </div>
  </div>
</body>
</html>